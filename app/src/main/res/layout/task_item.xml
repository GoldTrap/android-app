<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/md_grey_100"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    android:layout_marginStart="@dimen/tasks_card_margin"
    android:layout_marginEnd="@dimen/tasks_card_margin"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/container"
        style="@style/tasksDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/task_image"
            style="@style/tasksDialogImage"
            android:layout_width="@dimen/tasks_image_size"
            android:layout_height="@dimen/tasks_image_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/task_text"
            style="@style/tasksDialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/task_image"
            android:layout_toRightOf="@+id/task_image"
            android:paddingBottom="20dp"
            android:paddingTop="16dp"
            android:textSize="16sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>